<div class="table-responsive">
  <table id="policiesTable" class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Company</th>
      <th>Agent Number</th>
      <th>User name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% current_user.company_users.each do |company_user| %>
    <tr>
      <td>
        <%= link_to company_user.company.url do %>
          <%= company_user.company.name%>
        <% end %>
      </td>
      <td><%= company_user.agent_number %></td>
      <td><%= company_user.user_name %></td>
      <td><%= link_to 'Show', company_user %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
  </tfoot>
  </table>
</div>