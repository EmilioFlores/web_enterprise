<h1>Policies</h1>

<%= link_to "New Policy", new_policy_path, :class => 'btn btn-primary' %>

<div class="table-responsive">
	<table id="policiesTable" class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
	<thead>
		<tr>
			<th>Client</th>
			<th>Product</th>
			<th>Company</th>
			<th>Policy Type</th>
			<th>Renewal method</th>
			<th>Payment method</th>
			<!-- <th>Comission</th> -->
			<th>Policy Number</th>
			<th>Issued</th>
			<th>Expiration</th>
			<td>Show</td>
			<td>Edit</td>
		</tr>
	</thead>
	<tbody>
		<% @policies.each do |policy| %>
		<tr>
			<td><%= policy.client.full_name %></td>
			<td><%= policy.product_name %></td>
			<td><%= policy.company.name %></td>
			<td><%= policy.policy_type %></td>
			<td><%= policy.renewal_method %></td>
			<td><%= policy.payment_method %></td>
			<!-- <td><%= policy.comission %></td> -->
			<td><%= policy.policy_number %></td>
			<td><%= policy.issued_date %></td>
			<td><%= policy.expiration_date %></td>
			<td><%= link_to 'Show', policy %></td>
			<td><%= link_to 'Edit', edit_policy_path(policy) %></td>
		</tr>
		<% end %>
	</tbody>
	<tfoot>
	</tfoot>
	</table>
</div>