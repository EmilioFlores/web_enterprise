<h1><%= t('policy_list') %></h1>

<%= link_to t('new_policy'), new_policy_path, :class => 'btn btn-primary' %>

<div class="table-responsive">
	<table id="policiesTable" class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
	<thead>
		<tr>
			<th><%= t('client') %></th>
			<th><%= t('product') %></th>
			<th><%= t('company') %></th>
			<th><%= t('policy_type') %></th>
			<th><%= t('renewal_method') %></th>
			<th><%= t('payment_method') %></th>
			<!-- <th>Comission</th> -->
			<th><%= t('policy_number') %></th>
			<th><%= t('policy_issued') %></th>
			<th><%= t('expiration_date') %></th>
			<td><%= t('show') %></td>
			<td><%= t('edit') %></td>
		</tr>
	</thead>
	<tbody>
		<% @policies.each do |policy| %>
		<tr>
			<td><%= policy.client.full_name %></td>
			<td><%= policy.product_name %></td>
			<td><%= policy.company.name %></td>
			<td><%= policy.policy_type %></td>
			<td><%= policy.renewal_method %></td>
			<td><%= policy.payment_method %></td>
			<!-- <td><%= policy.comission %></td> -->
			<td><%= policy.policy_number %></td>
			<td><%= policy.issued_date %></td>
			<td><%= policy.expiration_date %></td>
			<td><%= link_to  t('show') , policy %></td>
			<td><%= link_to  t('edit') , edit_policy_path(policy) %></td>
		</tr>
		<% end %>
	</tbody>
	<tfoot>
	</tfoot>
	</table>
</div>