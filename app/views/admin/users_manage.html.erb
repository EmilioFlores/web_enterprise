<h1>User list</h1>

<div class="table-responsive">
  <table id="clientsTable" class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th># of clients</th>
        <th>User since</th>
        <th>Enable</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td><%= user.clients.size %></td>
          <td><%= user.created_at.try(:strftime, '%d/%m/%Y') %></td>
          <td><%= check_box_tag 'enabled', 'hidden', user.enabled?, class: 'enabled-checkbox form-control', id: "enabled-checkbox", data: {user_id: user.id} %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


