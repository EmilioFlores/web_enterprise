<h1> <%= t('companies_list')%></h1>

<%= link_to t("new_company"), admin_new_company_path, :class => 'btn btn-primary'  %>

 <div class="table-responsive">
  <table id="policiesTable" class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th><%= t('company') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |company| %>
      <tr>
        <td>
          <%= link_to company.url do %>
            <%= company.name%>
          <% end %>
        </td>
        <% if company.users.any? %>
          <td><%= t('disable_company_deletion') %></td>
        <% else %>
          <td><%= link_to t('destroy').capitalize, admin_destroy_company_path(company), method: :delete, class: 'btn btn-small btn-danger', data: { confirm: t('are_you_sure')}%></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
    </tfoot>
  </table>
</div>