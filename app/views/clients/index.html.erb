<h1><%= t('clients_list') %></h1>

<%= link_to t("new_client"), new_client_path, :class => 'btn btn-primary' %>

<div class="table-responsive">
  <table id="clientsTable" class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th><%= t('client') %></th>
        <th><%= t('email') %></th>
        <th><%= t('birth_date') %></th>
        <th><%= t('phone_number') %></th>
        <th><%= t('cellphone_number') %></th>
        <th><%= t('client_since') %></th>
        <td><%= t('show') %></td>
       <td><%= t('edit') %></td>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.full_name %></td>
          <td><%= client.email %></td>
          <td><%= client.birth_date.to_date %></td>
          <td><%= client.phone_number %></td>
          <td><%= client.cellphone_number %></td>
          <td><%= client.client_since.to_date %></td>
          <td><%= link_to t('show'), client %></td>
          <td><%= link_to t('edit'), edit_client_path(client) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
