<%= simple_form_for @client do |f| %>
	<div class="container-fluid">
		<div class="row">
		    <div class="col-md-3">
		    	<%= f.input :first_name, label: t('name') %>
		    </div>
			<div class="col-md-3">
				<%= f.input :second_name, label: t('middle_name')%>
			</div>
			<div class="col-md-3">
				<%= f.input :last_name, label: t('last_name') %>
			</div>
			<div class="col-md-3">
				<%= f.input :second_last_name, label: t('second_last_name') %>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col-md-3">
				<%= f.input :birth_date, as: :date_picker, label: t('birth_date'),
				input_html: {data: {date_options: {defaultDate: Time.now}}} %>
		    </div>
			<div class="col-md-3">
				<%= f.input :gender, prompt: t('select_a_gender'), label: t('gender') %>
			</div>
			<div class="col-md-3">
				<%= f.input :marital_status %>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col-md-3">
				<%= f.input :email, label: t('email') %>
			</div>
			<div class="col-md-3">
				<%= f.input :phone_number, label: t('phone_number') %>
			</div>
			<div class="col-md-3">
				<%= f.input :cellphone_number, label: t('cellphone_number') %>
			</div>
			<div class="col-md-3">
				<%= f.input :client_since, as: :date_picker, label: t('client_since'), input_html: {data: {date_options: {defaultDate: Time.now}}} %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-2">
				<%= f.input :has_kids, label: t('has_kids') %>
			</div>
			<div class="col-md-2">
				<%= f.input :is_vip, label: t('is_vip') %>
			</div>
		</div>
		<%= f.hidden_field :id %>
		<hr>
		<div class="items">
		<%= f.nested_fields_for :spouses, new_item_index: 'new_spouse_item' do |ff| %>
