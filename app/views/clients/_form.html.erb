				    <div class="col-md-3">
				    	<%= ff.input :first_name, label: t('name') %>
				    </div>
					<div class="col-md-3">
						<%= ff.input :second_name, label: t('middle_name')%>
					</div>
					<div class="col-md-3">
						<%= ff.input :last_name, label: t('last_name') %>
					</div>
					<div class="col-md-3">
						<%= ff.input :second_last_name, label: t('second_last_name') %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-3">
						<%= ff.input :birth_date, as: :date_picker, label: t('birth_date'),
						input_html: {data: {date_options: {defaultDate: Time.now}}} %>
				    </div>
					<div class="col-md-3">
						<%= ff.input :gender, prompt: t('select_a_gender'), label: t('gender') %>
					</div>
					<div class="col-md-3">
						<%= ff.input :married_date, as: :date_picker, label: t('married_date'),
						input_html: {data: {date_options: {defaultDate: Time.now}}} %>
					</div>
				</div>

				<a href="#" class="remove btn-sm btn-danger"> - <%= t('remove') %></a>

				<%= ff.hidden_field :id %>
				<%= ff.hidden_field :_destroy %>
			</fieldset>
		<% end %>
		</div>
		<a href="#" class="add btn-sm btn-success">+ <%= t('add') + ' ' + t('spouse') %></a>


